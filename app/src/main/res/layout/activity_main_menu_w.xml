<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="6"
    android:orientation="vertical"
    android:layout_gravity="start"
    android:choiceMode="singleChoice"
    android:divider="@color/colorDelimiter"
    android:dividerHeight="1dp"
    android:background="#fff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@drawable/button"
        android:clickable="true"
        android:weightSum="12"
        android:onClick="onSampleCalculationActivity"
        android:paddingRight="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:layout_weight="9"
            android:src="@drawable/sample_icon"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorPrimaryText"
            android:gravity="center_vertical"
            android:textAlignment="gravity"
            android:textSize="16dp"
            android:textAllCaps="true"
            android:layout_weight="3"
            android:text="@string/sample_calculate_menu"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@drawable/button"
        android:clickable="true"
        android:weightSum="12"
        android:onClick="onTwoSideCalculationActivity"
        android:paddingRight="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:layout_weight="9"
            android:src="@drawable/rukav_1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorPrimaryText"
            android:gravity="center_vertical"
            android:textAlignment="gravity"
            android:textSize="16dp"
            android:textAllCaps="true"
            android:layout_weight="3"
            android:text="@string/two_side_menu"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@drawable/button"
        android:clickable="true"
        android:weightSum="12"
        android:onClick="onOneSideCalculationActivity"
        android:paddingRight="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:layout_weight="9"
            android:src="@drawable/spinka_1"/>
        <TextView
            android:id="@+id/main_sendEther"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorPrimaryText"
            android:gravity="center_vertical"
            android:textAlignment="gravity"
            android:textSize="16dp"
            android:textAllCaps="true"
            android:layout_weight="3"
            android:text="@string/one_side_menu"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@drawable/button"
        android:clickable="true"
        android:weightSum="12"
        android:onClick="onDoubleFasonCalculationActivity"
        android:paddingRight="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:layout_weight="9"
            android:src="@drawable/rukav_1"/>
        <TextView
            android:id="@+id/main_sendEtherToEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorPrimaryText"
            android:gravity="center_vertical"
            android:textAlignment="gravity"
            android:textSize="16dp"
            android:textAllCaps="true"
            android:layout_weight="3"
            android:text="@string/double_side"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@drawable/button"
        android:clickable="true"
        android:weightSum="12"
        android:onClick="onPartialKnittingCalculationActivity"
        android:paddingRight="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:layout_weight="9"
            android:src="@drawable/partial_1"/>
        <TextView
            android:id="@+id/main_receivePayment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorPrimaryText"
            android:gravity="center_vertical"
            android:textAlignment="gravity"
            android:textSize="16dp"
            android:textAllCaps="true"
            android:layout_weight="3"
            android:text="@string/partial_knitting"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@drawable/button"
        android:weightSum="12"
        android:onClick="onSavedListActivity"
        android:paddingRight="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:layout_weight="9"
            android:src="@drawable/save_1"/>
        <TextView
            android:id="@+id/main_deployContract"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorPrimaryText"
            android:gravity="center_vertical"
            android:textAlignment="gravity"
            android:textSize="16dp"
            android:textAllCaps="true"
            android:layout_weight="3"
            android:text="Избранное"
            />
    </LinearLayout>
</LinearLayout>
