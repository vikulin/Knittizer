<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="10dp"
    android:weightSum="18"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_weight="12"
        android:layout_height="wrap_content"
        android:layout_width="0dp">
        <TextView android:id="@+id/help1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textStyle="normal"
            android:textSize="13sp"
            android:textColor="@color/colorDelimiter"
            android:padding="3dp"
            android:text="@string/s_do"/>
        <TextView android:id="@+id/list1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textStyle="normal"
            android:textSize="13sp"
            android:textColor="@color/colorPrimaryText"
            android:padding="3dp"
            android:layout_below="@+id/help1"
            android:text=""/>
        <TextView android:id="@+id/help2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textStyle="normal"
            android:textSize="13sp"
            android:textColor="@color/colorDelimiter"
            android:padding="3dp"
            android:layout_below="@+id/list1"
            android:text="@string/r_do"/>
        <TextView android:id="@+id/list2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textStyle="normal"
            android:textSize="13sp"
            android:textColor="@color/colorPrimaryText"
            android:padding="3dp"
            android:layout_below="@+id/help2"
            android:text=""/>
        <TextView android:id="@+id/help3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textStyle="normal"
            android:textSize="13sp"
            android:textColor="@color/colorDelimiter"
            android:padding="3dp"
            android:layout_below="@+id/list2"
            android:text="@string/decker_do"
            />
        <TextView android:id="@+id/list3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textStyle="normal"
            android:textSize="13sp"
            android:textColor="@color/colorPrimaryText"
            android:padding="3dp"
            android:layout_below="@+id/help3"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/saveButton"
        android:layout_weight="6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:background="@drawable/button_bg"
        android:textColor="@color/ic_launcher_background"
        android:drawablePadding="3dp"
        android:text="@string/save" />

</LinearLayout>