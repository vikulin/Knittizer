<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2"
    android:orientation="horizontal"
    android:layout_gravity="start"
    android:choiceMode="singleChoice"
    android:divider="@color/colorDelimiter"
    android:dividerHeight="1dp"
    android:background="#fff">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:orientation="vertical"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@color/colorDelimiter"
        android:dividerHeight="1dp"
        android:background="#fff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/button"
            android:clickable="true"
            android:weightSum="12"
            android:onClick="onSampleCalculationActivity"
            android:paddingRight="10dp"
            android:focusable="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:layout_weight="9"
                android:src="@drawable/sample_icon"
                android:contentDescription="@string/sample_calculate_menu" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif"
                android:textColor="@color/colorPrimaryText"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:textSize="16sp"
                android:textAllCaps="true"
                android:layout_weight="3"
                android:text="@string/sample_calculate_menu"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/button"
            android:clickable="true"
            android:weightSum="12"
            android:onClick="onTwoSideCalculationActivity"
            android:paddingRight="10dp"
            android:focusable="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:layout_weight="9"
                android:src="@drawable/rukav_1"
                android:contentDescription="@string/double_side"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif"
                android:textColor="@color/colorPrimaryText"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:textSize="16sp"
                android:textAllCaps="true"
                android:layout_weight="3"
                android:text="@string/double_side"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/button"
            android:clickable="true"
            android:weightSum="12"
            android:onClick="onOneSideCalculationActivity"
            android:paddingRight="10dp"
            android:focusable="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:layout_weight="9"
                android:src="@drawable/spinka_1"
                android:contentDescription="@string/one_side_menu" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif"
                android:textColor="@color/colorPrimaryText"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:textSize="16sp"
                android:textAllCaps="true"
                android:layout_weight="3"
                android:text="@string/one_side_menu" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:orientation="vertical"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@color/colorDelimiter"
        android:dividerHeight="1dp"
        android:background="#fff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/button"
            android:clickable="true"
            android:weightSum="12"
            android:onClick="onDoubleFasonCalculationActivity"
            android:paddingRight="10dp"
            android:focusable="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:layout_weight="9"
                android:src="@drawable/rukav_1"
                android:contentDescription="@string/two_side_menu" />
            <TextView
                android:id="@+id/mainTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif"
                android:textColor="@color/colorPrimaryText"
                android:textAlignment="gravity"
                android:textSize="16sp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:textAllCaps="true"
                android:text="@string/two_side_menu"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/button"
            android:clickable="true"
            android:weightSum="12"
            android:onClick="onPartialKnittingCalculationActivity"
            android:paddingRight="10dp"
            android:focusable="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:layout_weight="9"
                android:src="@drawable/partial_1"
                android:contentDescription="@string/partial_knitting" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif"
                android:textColor="@color/colorPrimaryText"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:textSize="16sp"
                android:textAllCaps="true"
                android:layout_weight="3"
                android:text="@string/partial_knitting"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/button"
            android:weightSum="12"
            android:onClick="onSavedListActivity"
            android:paddingRight="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:layout_weight="9"
                android:src="@drawable/save_1"
                android:contentDescription="@string/favorites"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif"
                android:textColor="@color/colorPrimaryText"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:textSize="16sp"
                android:textAllCaps="true"
                android:layout_weight="3"
                android:text="@string/favorites"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>