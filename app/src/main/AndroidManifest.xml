<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.vikulin.knittizer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SampleResultActivity"></activity>
        <activity android:name=".SampleCalculationActivity" />
        <activity android:name=".SavedListActivity" />
        <activity
            android:name=".SavingActivity"
            android:excludeFromRecents="true"
            android:theme="@android:style/Theme.Holo.Light.Dialog" />
        <activity android:name=".PartialKnittingResultActivity" />
        <activity android:name=".PartialKnittingCalculationActivity" />
        <activity android:name=".TwoSideCalculationActivity" />
        <activity android:name=".OneSideCalculationActivity" />
        <activity android:name=".DoubleSideFasonCalculationActivity" />
        <activity android:name=".MainMenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ResultActivity"
            android:label="@string/title_activity_result"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>